    "chokidar": "2.1.5"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "ie >= 9",
    "not op_mini all"
  ],
  "dependencies": {
    "@babel/runtime-corejs3": "^7.13.10",
    "axios": "^0.21.1",
    "mockjs": "^1.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
